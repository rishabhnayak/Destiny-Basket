<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradientbackground"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="8dp">
    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.design.card.MaterialCardView
        android:elevation="24dp"
        android:layout_centerInParent="true"
        android:id="@+id/oc"
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_credit_card_black_24dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destiny Wallet"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/rs"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="20sp"
                            android:id="@+id/wmoneyy"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_centerHorizontal="true"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.design.card.MaterialCardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oc">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Transaction Mode"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:id="@+id/tran"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tran"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp">
                    <android.support.design.card.MaterialCardView
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:elevation="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_below="@+id/tran"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="24dp">
                        <CheckBox
                            android:id="@+id/cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:paddingLeft="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginBottom="8dp"
                            android:text="Cash On Delivery"
                            android:button="@drawable/custom_checkbox"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </android.support.design.card.MaterialCardView>
                    <android.support.design.card.MaterialCardView
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:elevation="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_below="@+id/tran"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="24dp">
                        <CheckBox
                            android:id="@+id/wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:paddingLeft="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginBottom="8dp"
                            android:text="Use Your Wallet"
                            android:button="@drawable/custom_checkbox"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </android.support.design.card.MaterialCardView>
                    <android.support.design.card.MaterialCardView
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:elevation="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_below="@+id/tran"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="24dp">
                        <CheckBox
                            android:id="@+id/online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:paddingLeft="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginBottom="8dp"
                            android:text="Pay with PayTM"
                            android:button="@drawable/custom_checkbox"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </android.support.design.card.MaterialCardView>







                </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/ur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#f2eeee"
        android:layout_above="@+id/v"
        android:minHeight="58dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELIVERING ORDER TO"
                android:layout_marginLeft="8dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/l">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Enter your Address"
                android:id="@+id/pe"
                android:layout_marginLeft="8dp"
                android:background="@color/transparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANGE"
                android:id="@+id/pt"
                android:layout_marginRight="8dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:background="@color/transparent"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/v"
        android:layout_above="@+id/layout_chat_chatbox"
        android:background="#dfdfdf"
        android:layout_marginBottom="0dp"
        />

    <RelativeLayout
        android:id="@+id/layout_chat_chatbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:minHeight="58dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Total"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:id="@+id/it"
                android:layout_marginRight="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/payt"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/it"
                android:textColor="@color/colorPrimary"
                />
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/cardp"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proceed to pay"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:textSize="24sp"
                        android:id="@+id/t"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginRight="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:src="@drawable/ic_arrow_forward_black_24dp"
                        android:textSize="14dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

</RelativeLayout>
</RelativeLayout>