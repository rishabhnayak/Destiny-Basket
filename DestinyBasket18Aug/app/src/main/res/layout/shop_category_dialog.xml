<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="215dp"
    android:background="@drawable/squarcircle"
    android:layout_centerInParent="true"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >
    <TextView

        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount Details"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:textSize="21sp"
        android:id="@+id/dait"
        android:textColor="#000"/>
<LinearLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_below="@+id/dait"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dail"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Total :"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 100"
            android:id="@+id/cdsub"
            android:layout_marginLeft="56dp"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/daill"
        android:layout_below="@+id/dail">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping cost :"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 100"
            android:layout_marginLeft="18dp"
            android:id="@+id/cdship"
            android:textSize="20dp"/>

    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="225dp"
        android:layout_height="0.7dp"
        android:id="@+id/daiv"
        android:layout_below="@+id/daill"
        android:background="#afafaf"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dailll"
        android:layout_below="@+id/daiv">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total :"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 100"
            android:id="@+id/cdtotal"
            android:layout_marginLeft="97dp"
            android:textSize="20dp"/>

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/squarcircle"
        android:text="close"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/dailll"
        android:textColor="#fff"
        android:textSize="15dp"
        android:id="@+id/clos"
        android:backgroundTint="#DA33EE0A"
        />
</LinearLayout>


</RelativeLayout>